<div class="container">
  <div class="row">
    <div class="">
      <h3>商品詳細</h3>
      <%= image_tag @item.get_image %>
      <p>商品名<%= @item.name %></p>
      <p>商品説明<%= @item.introduction %></p>
      <p>ジャンル<%= @item.genre_id %></p>
      <p>
          税込価格<br>
            (税抜価格)<%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
      </p>
      <p>販売ステータス<%= @item.is_active ? "販売中" : "販売停止中"  %></p>
      <%= link_to '編集する', edit_admin_item_path, class:"btn btn-success" %>
    </div>
  </div>
</div>