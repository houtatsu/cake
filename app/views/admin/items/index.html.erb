<div class="container">
  <div class="row">
    <div class="">
      <h3>商品一覧</h3>
      <%= link_to  new_admin_item_path do %>
        <i class="fas fa-plus-circle"></i>
      <% end %>
      <table class="table table-striped">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td><%= item.price.to_s(:delimited) %></td>
                <td><%= item.genre_id %></td>
                <td><%= item.is_active %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>

