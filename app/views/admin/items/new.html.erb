<h3>商品新規登録</h3>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <label>商品画像</label>
  <%= f.file_field :image, accept: "image/*" %><br>
  <label>商品名</label>
  <%= f.text_field :name, placeholder:"商品名" %><br>
  <label>商品説明</label>
  <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %><br>
  <label>ジャンル</label>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %><br>
  <label>税抜価格</label>
  <%= f.number_field :price %>円<br>
  <label>販売ステータス</label>
  <label>
    <%= f.radio_button :is_active, "販売中" %>
    <%= f.label :is_active, "販売中" %>
  </label>
  <label>
    <%= f.radio_button :is_active, "販売停止中" %>
    <%= f.label :is_active, "販売停止中" %>
  </label><br>
  <%= f.submit '新規登録' %>
<% end %>