<h3>商品新規登録</h3>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <label>商品画像</label>
  <%= f.file_field :image, accept: "image/*" %><br>
  <label>商品名</label>
  <%= f.text_field :name %><br>
  <label>商品説明</label>
  <%= f.text_area :introduction %><br>
  <label>ジャンル</label>
  <%= f.select :genre, ['ケーキ', 'プリン', '焼き菓子', 'キャンディ'], {include_blank: '--選択してください--'} %><br>
  <label>税抜価格</label>
  <%= f.number_field :price %>円<br>
  <label>販売ステータス</label>
  <%= f.select :is_active, [['販売中',true],['販売停止中',false]] %><br>
  <%= f.submit '新規登録' %>
<% end %>