<div class="container">
  <div class="row">
    <div class="">
      <h3>ジャンル一覧・追加</h3>
			<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
			  <label>ジャンル名</label>
			  <%= f.text_field :name %>
			  <%= f.submit '新規登録', class:"btn btn-success" %>
			<% end %>

			<table class="table table-striped">
			  <thead>
					<tr>
						<th>ジャンル</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				  <% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success btn-sm" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
    </div>
  </div>
</div>