<div class="container">
	<div class="row no-gutters">
    <div class="col-12 d-inline-flex p-2 bd-highlight">
      <h4 class="bg-secondary">ジャンル一覧・追加</h4>
    </div>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="row">
      <label class="col-4">ジャンル名</label>
      <div class="col-6">
      	<%= f.text_field :name %>
      </div>
      <div class="col-2">
      	<%= f.submit '新規登録', class:"btn btn-success btn-sm" %>
      </div>
    </div>
    <% end %>
  </div>
	<div class="row">
		<div class="col-4 d-inline-flex p-2 bd-highlight">
			<table class="table">
			  <thead>
					<tr class="table-secondary">
						<th>ジャンル</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				  <% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success btn-sm" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
  </div>
</div>