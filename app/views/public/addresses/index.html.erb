<h3>配送先登録/一覧</h3>

<%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
  <label>郵便番号（ハイフンなし）</label>
  <%= f.text_field :postal_code %><br>
  <label>住所</label>
  <%= f.text_field :address %><br>
  <label>宛名</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table border="1">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_public_address_path(address.id) %>
          <%= link_to "削除する", public_address_path(address.id), method: :delete %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>