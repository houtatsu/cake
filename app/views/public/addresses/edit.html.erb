<div class="container">
  <div class="row">
    <div class="">
      <h3>配送先編集</h3>
      <%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
        <label>郵便番号</label>
        <%= f.text_field :postal_code, autofocus: true, placeholder:"郵便番号"%><br>
        <label>住所</label>
        <%= f.text_field :address, placeholder: "住所" %><br>
        <label>宛名</label>
        <%= f.text_field :name, placeholder: "宛名" %>
        <%= f.submit "変更内容を保存", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>