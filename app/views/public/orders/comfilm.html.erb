<div class="container">
  <div class="row">
    <div class="">
      <h3>注文情報確認</h3>
      <%= form_with model: @order, url: public_orders_path, method: :post do |f|%>
        <div>
          <table border=1>
            <thead>
              <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
              </tr>
            </thead>
            <tbody>
              <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
                <td><%= cart_item.amount %></td>
                <td><%= cart_item.subtotal.to_s(:delimited) %></td>
                <% @total_amount += cart_item.subtotal %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div>
          <table border=1>
            <tr><th>送料</th><td><%= @shipping_cost %></td></tr>
            <tr><th>商品合計</th><td><%= @total_amount.to_s(:delimited) %></td></tr>
            <tr><th>請求金額</th><td><%= (@total_amount += @shipping_cost).to_s(:delimited) %></td></tr>
          </table>
        </div>
        <div>
          <label><strong>支払方法</strong></label>
          <p><%= @order.payment_method_i18n %></p>
        </div>
        <div>
          <label><strong>お届け先</strong></label>
          <p>
            〒<%= @order.postal_code %><%= @order.address %><br>
            <%= @order.name %>
          </p>
        </div>
        <%= f.submit '注文を確定する', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>