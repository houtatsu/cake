<div class="container">
  <div class="row">
    <div class="">
      <h3>商品一覧</h3>
      <% @items.each do |item| %>
        <%= link_to public_item_path(item.id) do %>
          <%= image_tag item.get_image, size: "200x200" %>
        <% end %>
        <p><%= item.name %></p>
        <p>¥<%= item.add_tax_price.to_s(:delimited) %></p>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>