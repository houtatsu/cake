<div class="container">
  <div class="row no-gutters">
    <div class="col-12 d-inline-flex p-2 bd-highlight">
      <h4 class="bg-secondary">商品一覧</h4>
    </div>
  </div>
  <div class="row no-gutters">
    <div class="col-10 text-center d-flex flex-wrap">
      <% @items.each do |item| %>
        <%= link_to public_item_path(item.id) do %>
          <%= image_tag item.get_image, size: "150x150" %>
        <% end %>
        <p><%= item.name %></p>
        <p>¥<%= item.add_tax_price.to_s(:delimited) %></p>
      <% end %>
    </div>
  </div>
    <div class="row">
      <div class="col-12">
        <%= paginate @items %>
      </div>
    </div>
</div>