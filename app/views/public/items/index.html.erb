<div class="container text-center">
  <div class="row no-gutters">
    <div class="col-12 d-inline-flex p-2 bd-highlight">
      <h4 class="bg-secondary">商品一覧</h4>
    </div>
  </div>
  <div class="row no-gutters">
    <div class="col-9 d-flex flex-wrap bd-highlight mb-3">
      <% @items.each do |item| %>
      <div class="p-4">
        <%= link_to public_item_path(item.id) do %>
          <%= image_tag item.get_image, size: "150x150" %>
        <% end %><br>
        <p><%= item.name %><br>
        ¥<%= item.add_tax_price.to_s(:delimited) %></p>
      </div>
      <% end %>

    </div>
  </div>
    <div class="row">
      <div class="col-12">
        <%= paginate @items %>
      </div>
    </div>
</div>