<div class="container">
  <div class="row p-5">
    <div class="col-3">
      <%= image_tag @item.get_image, size: "200x200" %>
    </div>
    <div class="col-9">
      <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
          <h2>
          <strong><%= @item.name %></strong>
          </h2>
        <h5><%= @item.introduction %></h5>
        <h5><strong>¥<%= @item.add_tax_price.to_s(:delimited) %></strong>(税込)</h5>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <div>
          <%= f.select :amount, *[1..9], { include_blank: '個数選択'} %>
          <%= f.submit 'カートに入れる', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>