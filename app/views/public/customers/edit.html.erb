<h3>会員情報編集</h3>

<%= form_with model: @customer, url: public_customer_path(@customer.id), method: :patch do |f| %>
  <label>氏名</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓" %>
  <%= f.text_field :first_name, id:"inputName", placeholder:"名" %><br>
  <label>フリガナ</label>
  <%= f.text_field :last_name_kana, id:"inputName", placeholder:"姓（カナ）" %>
  <%= f.text_field :first_name_kana, id:"inputName", placeholder:"名（メイ）" %><br>
  <label>郵便番号</label>
  <%= f.number_field :postal_code, id:"inputCode", placeholder:"郵便番号" %><br>
  <label>住所</label>
  <%= f.text_field :address, id:"inputAddress", placeholder:"住所" %><br>
  <label>電話番号</label>
  <%= f.number_field :telephone_number, id:"inputNumber", placeholder:"電話番号" %><br>
  <label>メールアドレス</label>
  <%= f.email_field :email, id:"inputEmail", placeholder:"メールアドレス" %><br>
  <%= f.submit "編集内容を保存" %>
<% end %>

<%= link_to "退会する", public_unsubscribe_path(@customer.id) %>